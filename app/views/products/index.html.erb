Products list :
  <% @products.each do |product| %>
    <p><%= product.title %></p>
    <p><%= product.address %></p>
    <p><%= product.city %></p>
    <p><%= product.price %></p>
    <p><%= product.description %></p>
    <p><%= product.capacity %></p>
    <% if product.seed_picture.nil? || product.seed_picture == "" %>
      <% product.photos.each do |photo| %>
        <%= cl_image_tag photo.path, width: 300, height: 200 %>
      <% end %>
    <% else %>
      <%# raise %>
      <%= image_tag product.seed_picture, width: 300, height: 200, crop: :fill %>
    <% end %>
    <%= link_to "Edit your product", edit_product_path(product) %>
  <% end %>


