
<h1 class="text-center">Products list</h1>
<div class="wrapper-grey padded">
  <div class="row">
    <div class="container text-center col-xs-12 col-md-8">
      <% @products.each do |product| %>
      <div class="col-xs-12 col-sm-6">
        <% if product.seed_picture.nil? || product.seed_picture == "" %>
          <% if product.photos.first %>
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
            url('<%= cl_image_path product.photos.first.path, width: 300, height: 200, crop: :fill %>')">
            <%= link_to "", product_path(product), class:"card-link" %>
            <div class="card-category"><%= product.city %></div>
              <div class="card-description">
                <h2><%= product.title %></h2>
                <p><%= product.price %> EUROS</p>
              </div>
            </div>
          <% end %>
        <% else %>
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
      url('<%= image_path product.seed_picture, width: 300, height: 200, crop: :fill %>')">
      <div class="card-category"><%= product.city %> </div>
      <div class="card-description">
        <h2><%= product.title %></h2>
        <p><%= product.price %> EUROS</p>
      </div>
      <%= link_to "", product_path(product), class:"card-link" %>
    </div>

    <% end %>
  </div>
  <% end %>
</div>


    <div class="mappy col-xs-12 col-md-4">
      <div id="map" style="width: 100%; height: 400px;"></div>
        <% content_for(:after_js) do %>
        <%= javascript_tag do %>
          $(document).ready(function() {
          var handler = Gmaps.build('Google');
          handler.buildMap({ internal: { id: 'map' } }, function() {
          markers = handler.addMarkers(<%= raw @hash.to_json %>);
          handler.bounds.extendWith(markers);
          handler.fitMapToBounds();
              if (markers.length == 0) {
              handler.getMap().setZoom(2);
            } else if (markers.length == 1) {
            handler.getMap().setZoom(14);
            }
            });
            });
        <% end %>
      <% end %>
    </div>
  </div>
</div>



<%= content_for(:after_js) do %>
<script src="https://maps.googleapis.com/maps/api/js?libraries=places&amp;key=AIzaSyAe4PVk38pNIO3t77HZnIT6f_8b_k30BCs"></script>
<% end %>


