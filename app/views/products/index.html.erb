Products list :
  <% @products.each do |product| %>
    <p><%= product.capacity %></p>
    <div class="card"
      style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
             url('<%= cl_image_path product.photos.first.path, height: 300, width: 400, crop: :fill %>')">
      <div class="card-category"><%= product.city %></div>
      <div class="card-description">
        <h2><%= product.title %></h2>
        <p><%= product.price %> EUROS</p>
      </div>
      <a class="card-link" href="#" ></a>
    </div>
    <%= link_to "More details", product_path(product) %>
    <%= link_to "Edit your product", edit_product_path(product) %>

  <% end %>


