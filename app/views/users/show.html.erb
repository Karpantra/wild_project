<div class="profile-header-wrapper">
  <div class="container profile-header-container text-center">
    <div class="profile-header-infos">
    <% if @user.photo? %>
              <%= cl_image_tag @user.photo.path, width: 150, height: 150, crop: :thumb, radius: :max %>
            <% end %>
      <h1><%= @user.name.capitalize %></h1>
      <h2><%= @user.email %></h2>
      <p><%= @user.phone_number %></p>
    </div>
    <div class="tabs">
      <a class="tab active" data-target="#pending">
        <h3>Pending bookings</h3>
      </a>
      <a class="tab" data-target="#confirmed">
        <h3>Confirmed bookings</h3>
      </a>
      <a class="tab" data-target="#last">
        <h3>Last bookings</h3>
      </a>
    </div>
  </div>
</div>


<div class="container">
  <div class="tab-content" id="pending">
    <% @pending_bookings.each do |b| %>
      <%= render 'booking', booking: b %>
    <% end %>

  </div>
  <div class="tab-content hidden" id="confirmed">
   <div class="product">
    <% if @user.photo? %>
            <%= cl_image_tag @user.photo.path, class: "product-image hidden-xs"%>
          <% end %>
     <div class='product-body'>
       <h3>Booking 2</h3>
       <p>Description du produit + prix + date + ...</p>
     </div>
     <ul class="list-inline product-controls product-controls-hidden hidden-sm hidden-xs">
       <li><a href=""><i class="fa fa-trash"></i></a></li>
     </ul>
   </div>
  </div>
  <div class="tab-content hidden" id="last">
    <div class="product">
      <% if @user.photo? %>
        <%= cl_image_tag @user.photo.path, class: "product-image hidden-xs"%>
      <% end %>
      <div class='product-body'>
        <h3>Booking 3</h3>
        <p>Description du produit + prix + date + ...</p>
      </div>
      <ul class="list-inline product-controls product-controls-hidden hidden-sm hidden-xs">
        <li><a href=""><i class="fa fa-trash"></i></a></li>
      </ul>
    </div>
  </div>
</div>








