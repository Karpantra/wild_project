<div class="new_product_container">
  <div class="banner" style="background-image: linear-gradient(-225deg, rgba(145, 136, 154, 0.5) 0%, rgba(12, 15, 15, 0.8) 50%), url('<%= image_path('homepage-picture-2.jpg')%>');">
        <div class="unblured col-sm-4">
          <h3>Forgot your password?</h3>

          <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :email, required: true, autofocus: true, placeholder: "email" %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Send me reset password instructions" %>
          </div>
          <% end %>

        </div>
  </div>
</div>

