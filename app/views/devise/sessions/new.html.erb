

<div class="new_product_container text-center">
  <div class="banner" style="background-image: linear-gradient(-225deg, rgba(145, 136, 154, 0.5) 0%, rgba(12, 15, 15, 0.8) 50%), url('<%= image_path('homepage-picture-2.jpg')%>');">

        <div class="login-fields col-sm-4 col-offset-4">

        <h1>Member Login</h1>


          <p>Please provide your details</p>

            <div class="field">
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <%= f.input :email, required: false, autofocus: true, class: "login username-field", placeholder: "email" %>
              <%= f.input :password, required: false, class: "login password-field", placeholder: "password" %>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "log into the Wild", class: "btn btn-success btn-large" %>
            </div>
          <% end %>
          <br>
          <div class="render">
            <%= render "devise/shared/links" %>
          </div>
          </div>
        </div>



  </div>
</div>


