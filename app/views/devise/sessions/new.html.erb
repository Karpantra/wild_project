
<div class="account-container">

  <div class="content clearfix">

    <form action="#" method="post">

      <h1>Member Login</h1>

      <div class="login-fields">

        <p>Please provide your details</p>

          <div class="field">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, required: false, autofocus: true, class: "login username-field", placeholder: "email" %>
            <%= f.input :password, required: false, class: "login password-field", placeholder: "password" %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "log in", class: "btn btn-success btn-large" %>
          </div>
        <% end %>
      </div>
      </div>
    </form>
      <br>
      <div class="col-sm-4">
      <%= render "devise/shared/links" %>
      </div>
      <br>
  </div>
</div>
